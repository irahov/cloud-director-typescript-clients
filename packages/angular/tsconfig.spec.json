{
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "sourceMap": false,
    "lib": ["esnext", "dom"],
    "outDir": "out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "skipLibCheck": true
  },
  "files": [
    "src/test.ts"
  ],
  "include": [
    "**/*.spec.data.ts",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
